# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                                      controllers.Application.index
POST    /lobby/join/:id                        controllers.Application.setLobby(id: String)
POST    /lobby/leave                           controllers.Application.unsetLobby

POST    /game/join/:id                         controllers.Application.setGame(id: String)

# open websocket
GET     /socket/gamebrowser                    controllers.GameBrowserController.socket
GET     /socket/lobby                          controllers.LobbyController.socket

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                          controllers.Assets.at(path="/public", file)
GET     /webjars/*file                         controllers.WebJarAssets.at(file)

# Map google polymer elements
GET     /$file<paper.*|neon.*|iron.*|font.*>   controllers.PolymerElementHandler.redirectToElement(file: String)
GET     /polymer/*file                         controllers.PolymerElementHandler.getPolymer(file: String)
