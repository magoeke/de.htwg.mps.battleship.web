# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.Application.index


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)

# Map google polymer elements
GET /$file<paper.*|neon.*|iron.*|font.*>   controllers.PolymerElementHandler.redirectToElement(file: String)
GET /polymer/*file                  controllers.PolymerElementHandler.getPolymer(file: String)
#GET	/assets/lib/$file<[paper|flex|iron]{1}*> controllers.PolymerElementHandler.redirectToElement(file: String)
